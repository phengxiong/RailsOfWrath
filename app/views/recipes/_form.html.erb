
<div class="row">
  <div class="col-md-6">



<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :serving_size %><br>
    <%= f.text_field :serving_size, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= tinymce %>
    <%= f.label :directions %><br>
    <%= f.text_area :directions, :class => 'tinymce form-control', :rows => 10, :cols => 120 %>
  </div>
  <div class="field form-group">
    <%= f.label :picture %><br>
    <%= f.text_field :picture, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= tinymce %>
    <%= f.label :ingredients %><br>
    <%= f.text_area :ingredients, :class => 'tinymce form-control', :rows => 10, :cols => 120 %>
  </div>
  <div class="field form-group">
    <%= f.label :category %><br>
    <%= f.text_field :category, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :cook_time %><br>
    <%= f.text_field :cook_time, class: 'form-control' %>
  </div>
  <div class="field form-group">
    <%= f.label :prepare_time %><br>
    <%= f.text_field :prepare_time, class: 'form-control' %>
  </div>
  <div class="actions form-group">
    <%= f.submit 'Update', :class => 'btn btn-success' %>
  </div>
<% end %>

  </div>
</div>

<div class="row">
  <div class="col-md-6">


    <%= form_for(@recipe) do |f| %>
        <% if @recipe.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

              <ul>
                <% @recipe.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="field form-group">
          <%= f.label :title %><br>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="field form-group">
          <%= f.label :serving_size %><br>
          <%= f.text_field :serving_size, class: "form-control" %>
        </div>

        <div class="field form-group">
          <%= f.label :directions %><br>
          <%= f.text_field :directions, class: "form-control" %>
        </div>

        <div class="field form-group">
          <%= f.label :picture %><br>
          <%= f.text_field :picture, class: "form-control" %>
        </div>

        <div class="field form-group">
          <%= f.label :ingredients %><br>
          <%= f.text_area :ingredients, class: "form-control" %>
        </div>

        <div class="field form-group">
          <%= f.label :youtube %><br>
          <%= f.text_field :youtube, class: "form-control" %>
          <small><i>e.g. http://www.youtube.com/watch?v=sxfHm8Dygyc</i></small>
        </div>

        <div class="field form-group">
          <%= f.label :description %><br>
          <%= f.text_area :description, class: "form-control" %>
        </div>

        <div class="field form-group">
          <%= f.label :category %><br>
          <%= f.select :category, "<option>Appetizer</option>
          <option>Breakfast</option>
          <option>Lunch</option>
          <option>Chicken</option>
          <option>Dessert</option>
          <option>Healthy</option>
          <option>Main Dish</option>
          <option>Slow Cooker</option>
          <option>Vegetarian</option>".html_safe, multiple: true, prompt: "Select Category" %>
          <!--select_tag "people", options_from_collection_for_select(@people, "id", "name")
          # <select id="people" name="people"><option value="1">David</option></select> -->
        </div>


        <div class="field form-group">
          <%= f.label :cook_time %><br>
          <%= f.text_field :cook_time, class: "form-control" %>
        </div>
        <div class="field form-group">
          <%= f.label :prepare_time %><br>
          <%= f.text_field :prepare_time, class: "form-control" %>
        </div>
        <div class="actions form-group">
          <%= f.submit 'Add Recipe', :class => 'btn btn-success' %>
        </div>
    <% end %>

  </div>
</div>
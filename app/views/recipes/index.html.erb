<% if !user_signed_in? %>



    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">Recipes
          <!--<small>Subheading</small> -->
        </h1>
      </div>
    </div>


      <% @recipes.each do |recipe| %>
          <div class="row">
            <div class="col-md-7">
              <%= link_to (image_tag "http://lorempixel.com/700/300/food?#{rand(0.0..1.0)}", :class=>"img-responsive img-hover"), recipe %>
            </div>
            <div class="col-md-5">
              <h3><%= recipe.title %></h3>
              <h4>Category</h4>
              <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Laudantium veniam exercitationem expedita laborum at voluptate. Labore, voluptates totam at aut nemo deserunt rem magni pariatur quos perspiciatis atque eveniet unde.</p>
              <%= link_to 'View Recipe', recipe, :class=>"btn btn-primary" %>
            </div>
          </div>
        <hr>
      <% end %>

    <%= paginate @recipes %>


<% else %>

    <div class="col-md-12">
      <h1>Manage Recipes</h1>
      <% if user_signed_in? %>
          <%= link_to 'Post New Recipe', new_recipe_path, class: "btn  btn-success navbar-right" %>
      <% end %>
      <div class="center_page">
        <%= paginate @recipes %>
      </div>
    </div>



    <table class="table table-striped">
      <thead>
      <tr>
        <th>User</th>
        <th>Title</th>
        <th>Serving size</th>
        <th>Directions</th>
        <th>Picture</th>
        <th>Ingredients</th>
        <th>Category</th>
        <th>Cook time</th>
        <th>Prepare time</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @recipes.each do |recipe| %>
          <tr>
            <% username = User.find(recipe.user_id).username %>
            <td><%= username %></td>
            <td><%= recipe.title %></td>
            <td><%= recipe.serving_size %></td>
            <td><%= recipe.directions %></td>
            <td><%= image_tag recipe.picture, class: "img-responsive" %></td>
            <td><%= recipe.ingredients %></td>
            <td><%= recipe.category %></td>
            <td><%= recipe.cook_time %></td>
            <td><%= recipe.prepare_time %></td>
            <td><%= link_to 'Show', recipe %></td>
            <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
            <td><%= link_to 'Destroy', recipe, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>



    <div class="col-md-12">
      <div class="center_page">
        <%= paginate @recipes %>
      </div>
    </div>

<% end %>

  </div>
  <div class="field">
    <%= f.label :date_published %><br>
    <%= f.datetime_select :date_published %>
  </div>
  <div class="field">
    <%= f.label :forum_id %><br>
    <%= f.text_field :forum_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

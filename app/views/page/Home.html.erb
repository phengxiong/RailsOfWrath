Carousel for Staff Picks or User Favorites -- Added by Radley -- Testing


<% @ids = Recipe.pluck(:id) #return an array of ids where rating was 5 %>
<% @random_five = Recipe.find(@ids).first(6) %>

<div class="row">
  <% @count = 0 %>
  <% @random_five.each do |recipe| %>

      <div class="col-md-2 panel panel-primary">

        <div class="panel-heading">
          <h3 class="panel-title"><%= recipe.title %></h3>
        </div>

        <div class="panel-body">
          <%= image_tag recipe.picture, class: "img-responsive img-rounded" %>
        </div>

      </div>
      <% @count += 1 %>
      <% if @count > 5 %>
          </div> <!-- close row -->
          <div class="row"> <!-- open row -->
          <% @count = 0 %>
      <% end %>



  <% end %>
  </div>



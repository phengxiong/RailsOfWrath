<% if !@form_error %>
    <%= @error_msg %>
<% end %>
<%= form_for contactUs_path, id = :method => "POST"  do %>

    <%= label_tag :name, "Name:" %>
    <%= text_field_tag :name, @name,  {:required => true }%><br>

    <%= label_tag :email, "email:" %>
    <%= text_field_tag :email, @email, {:required => true } %><br>

    <%= label_tag :phone, "phone#:" %>
    <%= text_field_tag :phone, @phone, {:required => true } %><br>

    <%= label_tag :question, "Question:"%><br>
    <%= text_area_tag :question, @question, {:required => true } %><br>

    <%= label_tag :contact_pref, "Preferred method of contact?" %>
    <%= radio_button_tag  :contact_pref, "Phone", @rad_phone %>Phone:
    <%= radio_button_tag  :contact_pref, "Email", @rad_email %>Email:<br><br>



    <%= submit_tag "Submit"%>


<% end %>

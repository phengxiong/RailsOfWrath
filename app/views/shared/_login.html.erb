<!-- Modal -->
<div class="modal fade bs-modal-sm" id="myModal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <br>
      <div class="bs-example bs-example-tabs">
        <ul id="myTab" class="nav nav-tabs">
          <li class="active"><a href="#signin" data-toggle="tab">Sign In</a></li>
          <li class=""><a href="#signup" data-toggle="tab">Register</a></li>
        </ul>
      </div>
      <div class="modal-body">
        <div id="myTabContent" class="tab-content">

          <div class="tab-pane fade active in" id="signin">

            <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
                <div class="control-group">
                  <%= f.label :email, :class=> "control-label"%><br />
                  <div class="controls">
                    <%= f.email_field :email, autofocus: true, :class => "form-control input-medium", :required => true  %>
                  </div>
                </div>

                <div class="control-group">
                  <%= f.label :password, :class=> "control-label" %><br />
                  <div class="controls">
                    <%= f.password_field :password, autocomplete: "off", :class => "form-control input-medium", :required => true  %>
                  </div>
                </div>

                <% if devise_mapping.rememberable? -%>
                    <div class="control-group">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me, :class=> "control-label" %>
                    </div>
                <% end -%>

                <div class="control-group">
                 <div class="controls">
                   <%= f.submit "Log in", :class => "btn btn-success"  %>
                 </div>
                </div>
            <% end %>

            <%= render "devise/shared/links" %>

          </div>

          <div class="tab-pane fade" id="signup">
            <h2>Sign up</h2>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
                <%= devise_error_messages! %>

                <div class="control-group">
                  <%= f.label :email, :class=> "control-label" %><br />
                  <div class="controls">
                    <%= f.email_field :email, autofocus: true, :class => "form-control input-large", :required => true %>
                  </div>
                </div>

                <div class="control-group">
                  <%= f.label :username, :class=> "control-label" %><br />
                  <div class="controls">
                    <%= f.text_field :username, :class => "form-control input-large", :required => true %>
                  </div>
                </div>


                <div class="control-group">
                  <%= f.label :password, :class=> "control-label" %>
                  <% if @validatable %>
                      <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %><br />
                  <div class="controls">
                    <%= f.password_field :password, autocomplete: "off", :class => "form-control input-large", :required => true %>
                  </div>
                </div>

                <div class="control-group">
                  <%= f.label :password_confirmation, :class=> "control-label" %><br />
                  <div class="controls">
                    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control input-large", :required => true %>
                  </div>
                </div>

                <% if devise_mapping.rememberable? -%>
                    <div class="control-group">
                      <%= f.check_box :newsletter %>
                      <%= f.label :newsletter, :class=> "control-label" %>
                    </div>
                <% end -%>

                <div class="actions">
                  <%= f.submit "Sign up", :class => "btn btn-success" %>
                </div>
            <% end %>

            <%= render "devise/shared/links" %>

          </div>

        </div>
      </div>
      <div class="modal-footer">
        <center>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </center>
      </div>
    </div>
  </div>
</div>